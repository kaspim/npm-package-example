{
  "name": "example-package",
  "version": "1.0.0",
  "description": "Example of npm package with test and code style",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --coverage --config jestconfig.json",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write 'src/**/*.ts'",
    "build": "rm -rf ./lib/* && tsc",
    "prepare": "npm run test && npm run lint && npm run format && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://example.com/user/project.git"
  },
  "keywords": [
    "npm",
    "package",
    "example",
    "typescript",
    "jest"
  ],
  "author": "kaspar",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.3",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  }
}
